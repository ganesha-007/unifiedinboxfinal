{
  "name": "whatsapp-integration-backend",
  "version": "1.0.0",
  "description": "Backend for WhatsApp integration via UniPile",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc && npm run copy-migrations",
    "copy-migrations": "node scripts/copy-migrations.js",
    "start": "node dist/index.js",
    "migrate": "node dist/migrations/migrate.js",
    "worker:email": "nodemon src/workers/emailWorker.ts",
    "worker:email:prod": "node dist/workers/emailWorker.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@google-cloud/pubsub": "^4.0.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@sentry/node": "^7.120.4",
    "@sentry/profiling-node": "^7.120.4",
    "axios": "^1.13.1",
    "body-parser": "^1.20.2",
    "bullmq": "^5.8.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "googleapis": "^164.0.0",
    "ioredis": "^5.3.2",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "redis": "^5.9.0",
    "socket.io": "^4.6.2",
    "stripe": "^16.3.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
